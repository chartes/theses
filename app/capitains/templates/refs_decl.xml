<?xml version="1.0" encoding="UTF-8"?>
<refsDecl n="CTS">
  <cRefPattern n="Partie" matchPattern="(\w+).(\w+)" replacementPattern="#xpath(/tei:TEI/tei:text/tei:body/tei:div[@n='$1']//tei:div[@n='$2' and @type='chapter'])">
    <p>This pointer pattern extracts chapters</p>
  </cRefPattern>

  <cRefPattern n="Section" matchPattern="(\w+)" replacementPattern="#xpath(/tei:TEI/tei:text/tei:body/tei:div[@n='$1'])">
    <p>This pointer pattern extracts introduction, sources, parts, conclusion and appendix</p>
  </cRefPattern>
</refsDecl>
